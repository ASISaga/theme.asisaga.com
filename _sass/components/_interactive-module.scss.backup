// Interactive module component styles

// Interactive Module Component
.interactive-module {
  position: relative;
  cursor: pointer;
  border-radius: $border-radius;
  overflow: hidden;
  box-shadow: $box-shadow;
  height: 100%;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  
  &:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    
    .interactive-module-overlay {
      opacity: 1;
      
      .interactive-module-quote {
        transform: translateY(0);
        opacity: 1;
      }
      
      .interactive-module-indicator {
        transform: translateY(0);
        opacity: 1;
      }
    }
  }
  
  .interactive-module-inner {
    position: relative;
    height: 100%;
  }
  
  .interactive-module-image {
    height: 100%;
    
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
  
  .interactive-module-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.8) 100%);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: $spacing-md;
    color: $white;
    opacity: 0.8;
    transition: opacity 0.3s ease;
    
    .interactive-module-title {
      font-size: 1.5rem;
      margin-bottom: $spacing-md;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    }
    
    .interactive-module-quote {
      transform: translateY(20px);
      opacity: 0;
      transition: transform 0.5s ease, opacity 0.5s ease;
      margin-bottom: $spacing-md;
      
      blockquote {
        font-style: italic;
        border-left: 3px solid $accent;
        padding-left: $spacing-sm;
        font-size: 0.9rem;
      }
    }
    
    .interactive-module-indicator {
      text-align: center;
      transform: translateY(20px);
      opacity: 0;
      transition: transform 0.5s ease, opacity 0.5s ease;
      transition-delay: 0.1s;
      
      span {
        display: block;
        margin-bottom: $spacing-xs;
        font-size: 0.8rem;
      }
      
      i {
        color: $accent;
        font-size: 1.5rem;
      }
    }
  }
}

// Content Modal styling enhancements
.modal-content {
  background-color: $light;
  border: none;
  border-radius: $border-radius;
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
  
  .modal-header {
    border-bottom: 1px solid $border-color;
    
    .modal-title {
      color: $primary;
      font-weight: $font-weight-semibold;
    }
  }
  
  .modal-body {
    padding: $spacing-lg;
  }
  
  .modal-footer {
    border-top: 1px solid $border-color;
  }
}

// Hide the actual content that will be injected into the modal
.interactive-module-content.d-none {
  display: none !important;
}
