// Product Code Example Component Styles
// Corresponds to product-code-example.html include

.product-code-example-section {
  @extend .py-5;
  
  &.product-section-light {
    @extend .bg-light;
  }
  
  .product-code-container {
    @extend .container;
    @extend .py-3;
    
    .product-code-example {
      @extend .bg-dark;
      @extend .p-3;
      @extend .rounded;
      @extend .shadow;
      
      .product-code-title {
        @extend .text-white;
        @extend .mb-3;
      }
        .product-code-block {
        @extend .m-0;
        max-height: $product-code-max-height; // Using centralized dimension variable
        overflow-y: auto;
        
        code {
          font-family: 'Courier New', Courier, monospace;
          font-size: $product-code-font-size; // Using centralized dimension variable
          line-height: 1.5;
        }
      }
    }
  }
}
