// Call to Action component - Using Bootstrap native classes
// A reusable CTA section with consistent styling across pages

.cta-section {
  @extend .d-flex; // Bootstrap display utility
  @extend .flex-column; // Bootstrap flex utility
  @extend .align-items-center; // Bootstrap flex utility
  @extend .justify-content-center; // Bootstrap flex utility
  @extend .shadow-sm; // Bootstrap shadow utility
  @extend .bg-light; // Bootstrap background utility (replacing custom gradient)
  @extend .rounded; // Bootstrap border-radius utility
  @extend .text-center; // Bootstrap text alignment utility
  @extend .mb-5; // Bootstrap margin utility
  @extend .py-5; // Bootstrap padding utility
  @extend .px-3; // Bootstrap padding utility
  
  .cta-content {
    @extend .mx-auto; // Bootstrap margin utility
    @extend .container-md; // Bootstrap container - replaces custom max-width
  }
  
  .cta-title {
    @extend .fw-bold; // Bootstrap font-weight utility
    @extend .text-primary; // Bootstrap text color utility
    @extend .mb-3; // Bootstrap margin utility
    @extend .fs-4; // Bootstrap font-size utility
  }
  
  .cta-description {
    @extend .text-secondary; // Bootstrap text color utility
    @extend .mb-4; // Bootstrap margin utility
    @extend .lead; // Bootstrap lead text utility
  }
  
  .cta-buttons {
    @extend .d-flex; // Bootstrap display utility
    @extend .flex-wrap; // Bootstrap flex utility
    @extend .justify-content-center; // Bootstrap flex utility
    @extend .gap-3; // Bootstrap gap utility
  }
  
  .cta-button {
    @extend .btn; // Bootstrap button component
    @extend .btn-primary; // Bootstrap button style
    @extend .rounded-pill; // Bootstrap border-radius utility
    @extend .px-4; // Bootstrap padding utility
    @extend .py-2; // Bootstrap padding utility
    
    &:hover {
      @extend .shadow; // Bootstrap shadow utility for hover effect
    }
    
    &.cta-button-outline {
      @extend .btn-outline-primary; // Bootstrap outline button style
    }
  }
  
  // Variant modifiers
  &.cta-section-secondary {
    @extend .bg-secondary; // Bootstrap background utility
    @extend .bg-opacity-10; // Bootstrap opacity utility
    
    .cta-title {
      @extend .text-secondary; // Bootstrap text color utility
    }
    
    .cta-button {
      @extend .btn-secondary; // Bootstrap button style
      
      &.cta-button-outline {
        @extend .btn-outline-secondary; // Bootstrap outline button style
      }
    }
  }
  &.cta-section-accent {
    @extend .bg-info; // Using restored info color
    @extend .bg-opacity-10; // Bootstrap opacity utility
    
    .cta-title {
      @extend .text-info; // Using restored info text color
    }
    
    .cta-button {
      @extend .btn-info; // Using restored info button style
      
      &.cta-button-outline {
        @extend .btn-outline-info; // Bootstrap outline button style
      }
    }
  }
}