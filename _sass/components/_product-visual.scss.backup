// Product Visual Component Styles
// Corresponds to product-visual.html include

.product-visual-section {
  @extend .py-5;
  
  &.product-section-light {
    @extend .bg-light;
  }
  
  .product-visual-container {
    @extend .container;
    @extend .text-center;
    @extend .my-4;
    
    .product-image {
      @extend .img-fluid;
      @extend .rounded;
      @extend .shadow-sm;
      max-width: 100%;
      height: auto;
    }
    
    .additional-content-container {
      @extend .mt-4;
      @extend .text-start; // Align text to the left for readability
      
      h3 {
        @extend .fw-bold;
        @extend .mb-3;
        color: var(--color-primary);
      }
      
      ul {
        @extend .list-unstyled;
        
        li {
          @extend .mb-2;
        }
      }
    }
  }
}
