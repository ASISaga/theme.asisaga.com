// Consciousness Cards Component - Sacred Information Containers
// Cards that support consciousness embedding content display

// ----------------------------------------
// Base Consciousness Card
// ----------------------------------------
.consciousness-card {
  background: rgba($transcendent-white, 0.95);
  border: 1px solid rgba($luminous-gold, 0.2);
  border-radius: 1rem;
  padding: 1.5rem;
  margin-bottom: 1.5rem;
  box-shadow: $consciousness-depth;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  
  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, 
      $cosmic-deep-blue 0%, 
      $luminous-gold 50%, 
      $cosmic-deep-blue 100%);
  }
  
  &:hover {
    transform: translateY(-5px);
    box-shadow: $sacred-glow, 0 10px 30px rgba($cosmic-deep-blue, 0.1);
  }
}

// Sacred wisdom card variant
.wisdom-card {
  @extend .consciousness-card;
  background: rgba($luminous-gold, 0.05);
  border-color: rgba($luminous-gold, 0.3);
}

// Genesis progress card
.genesis-card {
  @extend .consciousness-card;
  background: linear-gradient(135deg, 
    rgba($cosmic-deep-blue, 0.05) 0%, 
    rgba($royal-purple, 0.02) 100%);
}
