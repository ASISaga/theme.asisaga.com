// Product Applications Component Styles
// Corresponds to product-applications.html include

.product-applications-section {
  @extend .py-5;
  
  .product-grid {
    @extend .container;
    @extend .row;
    @extend .justify-content-center;
    
    .product-card {
      @extend .col-md-4;
      @extend .p-4;
      @extend .mb-4;
      @extend .h-100;
      @extend .bg-white;
      @extend .rounded;
      @extend .border;
      @include transition(all, 0.3s, ease);
        &:hover {
        transform: translateY($product-item-hover-translate); // Using centralized dimension variable
        @extend .shadow;
      }
      
      // Card style variations
      &.product-card-accent {
        border-left: $product-border-accent-width solid var(--color-accent); // Using centralized dimension variable
      }
      
      &.product-card-primary {
        border-left: $product-border-accent-width solid var(--color-primary); // Using centralized dimension variable
      }
      
      .product-card-title {
        @extend .fw-bold;
        @extend .mb-3;
        color: var(--color-primary);
      }
      
      .product-card-description {
        @extend .mb-0;
      }
    }
  }
}
