// Team/profile component mixins
// Used for team member profiles or similar content blocks

// Base team component
@mixin team-component($prefix: 'team') {
  .#{$prefix} {
    &-section {
      @extend .py-5;
      @extend .bg-light;
      @extend .rounded;
      @extend .text-center;
      @extend .mb-5;
    }
    
    &-title {
      @extend .display-5;
      @extend .mb-4;
      @extend .text-primary;
    }
    
    &-subtitle {
      @extend .h5;
      @extend .text-muted;
      @extend .mb-4;
    }
    
    &-grid {
      @extend .row;
      @extend .justify-content-center;
      @extend .g-4;
      @extend .mt-4;
    }
    
    &-member {
      @extend .col-md-6;
      @extend .col-lg-4;
      
      &-card {
        @extend .card;
        @extend .bg-white;
        @extend .shadow-sm;
        @extend .h-100;
        @extend .p-4;
        @extend .rounded;
      }
      
      &-name {
        @extend .fw-bold;
        @extend .text-primary;
        @extend .mt-3;
        @extend .mb-1;
      }
      
      &-role {
        @extend .text-secondary;
        @extend .fw-medium;
        @extend .mb-3;
      }
      
      &-bio {
        @extend .mb-0;
      }
      
      &-image {
        @extend .img-fluid;
        @extend .rounded-circle;
        @extend .mx-auto;
        @extend .d-block;
        max-width: 150px;
      }
    }
  }
}

// Alternate team component with different styling
@mixin alt-team-component($prefix: 'team') {
  @include team-component($prefix);
  
  .#{$prefix} {
    &-section {
      background: linear-gradient(135deg, rgba($primary, 0.1) 0%, rgba($white, 1) 100%);
      border: none;
    }
    
    &-member {
      &-card {
        border-top: 3px solid $primary;
      }
    }
  }
}
