// Back to top button styles

.back-to-top {
  position: fixed;
  bottom: -60px;
  right: 20px;
  width: 45px;
  height: 45px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: $primary;
  color: $white;
  border-radius: 50%;
  border: none;
  box-shadow: 0 2px 10px rgba($dark, 0.3);
  opacity: 0;
  transition: all 0.3s ease-in-out;
  z-index: 999;
  cursor: pointer;
  
  &.show {
    bottom: 20px;
    opacity: 0.8;
    
    &:hover,
    &:focus {
      opacity: 1;
      transform: translateY(-5px);
    }
  }
  
  &:focus {
    outline: 2px solid $warning;
    outline-offset: 2px;
  }
  
  i {
    font-size: 1.2rem;
  }
  
  @media (prefers-reduced-motion: reduce) {
    transition: opacity 0.05s ease-in-out;
    
    &.show:hover,
    &.show:focus {
      transform: none;
    }
  }
}
