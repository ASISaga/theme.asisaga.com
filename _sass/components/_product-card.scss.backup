// Product Card - Using Bootstrap native classes
.product-card {
  @extend .card; // Bootstrap card component
  @extend .h-100; // Bootstrap height utility for equal height cards
  @extend .mb-4; // Bootstrap margin utility
  @extend .shadow-sm; // Bootstrap shadow utility for subtle depth
  @extend .border-0; // Bootstrap border utility to remove default border

  .product-card__image-container {
    @extend .position-relative; // Bootstrap position utility for potential overlays
    @extend .overflow-hidden; // Bootstrap overflow utility for image containment
    @extend .bg-light; // Bootstrap background utility for placeholder background
  }

  .product-card__image {
    @extend .card-img-top; // Bootstrap image utility
    @extend .img-fluid; // Bootstrap responsive image utility
  }

  .product-card__image-placeholder {
    @extend .d-flex; // Bootstrap display utility
    @extend .align-items-center; // Bootstrap flex utility
    @extend .justify-content-center; // Bootstrap flex utility
    @extend .bg-light; // Bootstrap background utility
    @extend .text-muted; // Bootstrap text color utility
    @extend .ratio; // Bootstrap ratio utility for placeholder
    @extend .ratio-16x9; // Bootstrap aspect ratio utility

    span {
      @extend .fs-1; // Bootstrap font size utility
      @extend .fw-bold; // Bootstrap font weight utility
    }
  }

  .product-card__content {
    @extend .card-body; // Bootstrap card component part
    @extend .d-flex; // Bootstrap display utility
    @extend .flex-column; // Bootstrap flex utility
    @extend .p-4; // Bootstrap padding utility - slightly more padding than default
  }

  .product-card__title {
    @extend .card-title; // Bootstrap card component part
    @extend .text-primary; // Bootstrap text color utility
    @extend .fw-bold; // Bootstrap font weight utility
    @extend .mb-2; // Bootstrap margin utility
  }

  .product-card__description {
    @extend .card-text; // Bootstrap card component part
    @extend .flex-grow-1; // Bootstrap flex utility
    @extend .text-body-secondary; // Bootstrap text color utility for secondary text
  }

  .product-card__actions {
    @extend .mt-auto; // Bootstrap margin utility
    @extend .pt-3; // Bootstrap padding utility
    @extend .d-flex; // Bootstrap display utility
    @extend .flex-wrap; // Bootstrap flex utility
    @extend .gap-2; // Bootstrap gap utility for spacing between buttons
  }

  .product-card__btn {
    @extend .btn; // Bootstrap button component
    @extend .btn-primary; // Bootstrap button style
    @extend .rounded-pill; // Bootstrap border radius utility
    @extend .px-3; // Bootstrap padding utility
    @extend .py-2; // Bootstrap padding utility

    &.product-card__btn--outline {
      @extend .btn-outline-primary; // Bootstrap button style

      &:hover {
        @extend .text-white; // Bootstrap text color utility
      }
    }
  }
}