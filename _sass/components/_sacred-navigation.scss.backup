// Sacred Navigation Component - Consciousness-Supporting Navigation
// Navigation elements that guide users along the transcendent pathway

// ----------------------------------------
// Sacred Primary Navigation
// ----------------------------------------
.sacred-navbar {
  background: rgba($transcendent-white, 0.95);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba($luminous-gold, 0.2);
  transition: all 0.3s ease;
  
  &.scrolled {
    background: rgba($cosmic-deep-blue, 0.95);
    
    .navbar-brand,
    .nav-link {
      color: $transcendent-white;
    }
    
    .nav-link:hover {
      color: $luminous-gold;
    }
  }
}

.sacred-navbar-brand {
  font-family: $font-family-sacred;
  font-size: 1.5rem;
  font-weight: $font-weight-bold;
  color: $cosmic-deep-blue;
  text-decoration: none;
  display: flex;
  align-items: center;
  
  &::before {
    content: "∞◊";
    margin-right: 0.5rem;
    color: $luminous-gold;
    font-size: 1.2em;
  }
  
  &:hover {
    color: $luminous-gold;
    transform: translateY(-1px);
  }
}

// Sacred navigation links
.sacred-nav-link {
  font-family: $font-family-consciousness;
  font-weight: $font-weight-medium;
  color: $cosmic-deep-blue;
  text-decoration: none;
  padding: 0.75rem 1rem;
  margin: 0 0.25rem;
  border-radius: 0.5rem;
  transition: all 0.3s ease;
  position: relative;
  
  &::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: $luminous-gold;
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }
  
  &:hover {
    color: $luminous-gold;
    background: rgba($luminous-gold, 0.1);
    transform: translateY(-2px);
    
    &::after {
      width: 80%;
    }
  }
  
  &.active {
    color: $luminous-gold;
    font-weight: $font-weight-semibold;
    
    &::after {
      width: 100%;
    }
  }
}

// Sacred dropdown navigation
.sacred-dropdown {
  position: relative;
  
  .sacred-dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background: rgba($transcendent-white, 0.98);
    border: 1px solid rgba($luminous-gold, 0.2);
    border-radius: 0.75rem;
    box-shadow: $consciousness-depth;
    padding: 1rem 0;
    min-width: 250px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    z-index: 1000;
  }
  
  &:hover .sacred-dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
}

.sacred-dropdown-item {
  display: block;
  padding: 0.75rem 1.5rem;
  color: $cosmic-deep-blue;
  text-decoration: none;
  font-family: $font-family-consciousness;
  transition: all 0.3s ease;
  
  &:hover {
    background: rgba($luminous-gold, 0.1);
    color: $luminous-gold;
    transform: translateX(5px);
  }
}

// ----------------------------------------
// Sacred Breadcrumb Navigation
// ----------------------------------------
.sacred-breadcrumb {
  display: flex;
  align-items: center;
  padding: 1rem 0;
  font-family: $font-family-consciousness;
  
  .breadcrumb-item {
    display: flex;
    align-items: center;
    color: $text-muted;
    
    &:not(:last-child)::after {
      content: "◊";
      color: $luminous-gold;
      margin: 0 0.75rem;
    }
    
    &.active {
      color: $cosmic-deep-blue;
      font-weight: $font-weight-medium;
    }
    
    a {
      color: $text-muted;
      text-decoration: none;
      transition: color 0.3s ease;
      
      &:hover {
        color: $luminous-gold;
      }
    }
  }
}

// ----------------------------------------
// Sacred Side Navigation
// ----------------------------------------
.sacred-sidenav {
  width: 280px;
  background: rgba($transcendent-white, 0.98);
  border-right: 1px solid rgba($luminous-gold, 0.2);
  padding: 2rem 0;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  transform: translateX(-100%);
  transition: transform 0.3s ease;
  z-index: 1050;
  
  &.active {
    transform: translateX(0);
  }
  
  .sidenav-header {
    padding: 0 1.5rem 1.5rem;
    border-bottom: 1px solid rgba($luminous-gold, 0.1);
    margin-bottom: 1rem;
    
    h3 {
      color: $cosmic-deep-blue;
      font-size: 1.25rem;
      margin: 0;
    }
  }
  
  .sidenav-section {
    margin-bottom: 2rem;
    
    .section-title {
      padding: 0.5rem 1.5rem;
      color: $text-muted;
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      font-weight: $font-weight-semibold;
    }
  }
  
  .sidenav-link {
    display: block;
    padding: 0.75rem 1.5rem;
    color: $cosmic-deep-blue;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    
    &::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 3px;
      background: $luminous-gold;
      transform: scaleY(0);
      transition: transform 0.3s ease;
    }
    
    &:hover {
      background: rgba($luminous-gold, 0.1);
      color: $luminous-gold;
      transform: translateX(5px);
      
      &::before {
        transform: scaleY(1);
      }
    }
    
    &.active {
      background: rgba($luminous-gold, 0.15);
      color: $luminous-gold;
      font-weight: $font-weight-semibold;
      
      &::before {
        transform: scaleY(1);
      }
    }
  }
}

// Sacred mobile navigation toggle
.sacred-nav-toggle {
  background: none;
  border: 2px solid $luminous-gold;
  border-radius: 0.5rem;
  color: $luminous-gold;
  padding: 0.5rem;
  cursor: pointer;
  transition: all 0.3s ease;
  
  &:hover {
    background: $luminous-gold;
    color: $cosmic-deep-blue;
  }
  
  .toggle-icon {
    width: 24px;
    height: 18px;
    position: relative;
    
    span {
      display: block;
      height: 2px;
      width: 100%;
      background: currentColor;
      margin-bottom: 4px;
      transition: all 0.3s ease;
      
      &:last-child {
        margin-bottom: 0;
      }
    }
  }
  
  &.active .toggle-icon span {
    &:first-child {
      transform: rotate(45deg) translate(5px, 5px);
    }
    
    &:nth-child(2) {
      opacity: 0;
    }
    
    &:last-child {
      transform: rotate(-45deg) translate(7px, -6px);
    }
  }
}

// ----------------------------------------
// Sacred Pagination
// ----------------------------------------
.sacred-pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 2rem 0;
  
  .page-item {
    margin: 0 0.25rem;
    
    .page-link {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      border: 1px solid $ethereal-silver;
      border-radius: 50%;
      color: $cosmic-deep-blue;
      text-decoration: none;
      transition: all 0.3s ease;
      
      &:hover {
        background: $luminous-gold;
        border-color: $luminous-gold;
        color: $cosmic-deep-blue;
        transform: translateY(-2px);
      }
    }
    
    &.active .page-link {
      background: $cosmic-deep-blue;
      border-color: $cosmic-deep-blue;
      color: $transcendent-white;
    }
    
    &.disabled .page-link {
      opacity: 0.5;
      pointer-events: none;
    }
  }
}

// ----------------------------------------
// Sacred Navigation Accessibility
// ----------------------------------------
.sacred-nav-skip {
  position: absolute;
  top: -40px;
  left: 6px;
  background: $cosmic-deep-blue;
  color: $transcendent-white;
  padding: 8px 16px;
  text-decoration: none;
  border-radius: 0 0 4px 4px;
  z-index: 1000;
  
  &:focus {
    top: 0;
  }
}

// ----------------------------------------
// Sacred Navigation Responsive
// ----------------------------------------
@include media-breakpoint-down(lg) {
  .sacred-navbar {
    padding: 0.5rem 1rem;
  }
  
  .sacred-nav-link {
    padding: 0.5rem 0.75rem;
    margin: 0 0.125rem;
  }
}

@include media-breakpoint-down(md) {
  .sacred-sidenav {
    width: 100%;
  }
  
  .sacred-dropdown-menu {
    position: static;
    transform: none;
    opacity: 1;
    visibility: visible;
    box-shadow: none;
    border: none;
    background: rgba($luminous-gold, 0.05);
    margin-top: 0.5rem;
  }
}
