// Feature Grid component - Using Bootstrap native classes
// A reusable pattern for displaying features in a responsive grid

.feature-section {
  @extend .mb-5; // Bootstrap margin utility
  @extend .py-5; // Bootstrap padding utility for top/bottom spacing
  
  .feature-title {
    @extend .text-center; // Bootstrap text alignment utility
    @extend .mb-4; // Bootstrap margin utility
    @extend .fs-2; // Bootstrap font-size utility
    @extend .fw-bold; // Bootstrap font-weight utility
    @extend .text-primary; // Bootstrap text color utility
  }
  
  .feature-grid {
    @extend .row; // Bootstrap grid row
    @extend .g-4; // Bootstrap grid gap utility
    @extend .justify-content-center; // Bootstrap flex utility
    
    .feature-item {
      @extend .col-12; // Bootstrap column utility - full width on mobile
      @extend .col-md-6; // Bootstrap column utility - half width on medium screens
      @extend .col-lg-4; // Bootstrap column utility - third width on large screens
      @extend .h-100; // Bootstrap height utility
      @extend .transition; // Bootstrap transition utility if available
      
      &:hover {
        transform: translateY(-5px); // Keep this custom transform effect
      }
    }
    
    .feature-card {
      @extend .h-100; // Bootstrap height utility
      @extend .p-4; // Bootstrap padding utility
      @extend .rounded; // Bootstrap border-radius utility
      @extend .shadow-sm; // Bootstrap box-shadow utility
      @extend .bg-white; // Bootstrap background color utility
    }
    
    .feature-icon {
      @extend .fs-1; // Bootstrap font-size utility
      @extend .text-primary; // Bootstrap text color utility
      @extend .mb-3; // Bootstrap margin utility
    }
    
    .feature-card-title {
      @extend .fw-bold; // Bootstrap font-weight utility
      @extend .mb-3; // Bootstrap margin utility
    }
    
    .feature-description {
      @extend .text-body-secondary; // Bootstrap text color utility for secondary text
    }
  }
  
  // Alternative styles
  &.feature-section-alt {
    @extend .bg-light; // Bootstrap background utility
    
    .feature-card {
      @extend .border-start; // Bootstrap border utility
      @extend .border-4; // Bootstrap border-width utility
      @extend .border-primary; // Bootstrap border-color utility
    }
  }
}