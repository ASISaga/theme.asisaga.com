// LinkedIn component styling - Using Bootstrap native classes
// Matches linkedin.html component in _includes

.linkedin-badge {
  @extend .shadow-sm; // Bootstrap shadow utility
  @extend .rounded; // Bootstrap border-radius utility
  @extend .overflow-hidden; // Bootstrap overflow utility
  @extend .mb-3; // Bootstrap margin utility
  
  .linkedin-profile {
    @extend .bg-light; // Bootstrap background utility
    @extend .p-3; // Bootstrap padding utility
    
    &-header {
      @extend .d-flex; // Bootstrap display utility
      @extend .justify-content-between; // Bootstrap flex utility
      @extend .mb-3; // Bootstrap margin utility
    }
      &-image {
      @extend .rounded-circle; // Bootstrap border-radius utility
      @extend .shadow-sm; // Bootstrap shadow utility
      @extend .object-fit-cover; // Bootstrap object-fit utility
      width: $linkedin-avatar-size; // Using centralized dimension variable
      height: $linkedin-avatar-size; // Using centralized dimension variable
    }
    
    &-info {
      @extend .ms-3; // Bootstrap margin utility
      @extend .flex-grow-1; // Bootstrap flex utility
    }
    
    &-name {
      @extend .fw-semibold; // Bootstrap font-weight utility
      @extend .mb-1; // Bootstrap margin utility
    }
    
    &-title {
      @extend .text-muted; // Bootstrap text color utility
      @extend .small; // Bootstrap font-size utility
      @extend .mb-1; // Bootstrap margin utility
    }
    
    &-company {
      @extend .small; // Bootstrap font-size utility
    }
  }
  
  .linkedin-button {
    @extend .d-block; // Bootstrap display utility
    @extend .text-center; // Bootstrap text alignment utility
    @extend .text-white; // Bootstrap text color utility
    @extend .py-2; // Bootstrap padding utility
    @extend .fw-medium; // Bootstrap font-weight utility
    @extend .text-decoration-none; // Bootstrap text decoration utility
    background-color: #0077b5; // LinkedIn brand color - keep as is
    
    &:hover {
      @extend .text-white; // Bootstrap text color utility
      @extend .text-decoration-none; // Bootstrap text decoration utility
      background-color: darken(#0077b5, 10%); // Keep this hover effect
    }
  }
}