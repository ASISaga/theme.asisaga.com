// Testimonial component - Using Bootstrap native classes
// Reusable testimonial styling for customer quotes and feedback

.testimonial-section {
  @extend .py-5; // Bootstrap padding utility
  @extend .bg-light; // Bootstrap background utility
  @extend .mb-5; // Bootstrap margin utility
  
  .testimonial-container {
    @extend .container; // Bootstrap container
  }
  
  .testimonial-grid {
    @extend .row; // Bootstrap row
    @extend .g-4; // Bootstrap gap utility
  }
  
  .testimonial-item {
    @extend .col-12; // Bootstrap column utility
    @extend .col-md-6; // Bootstrap column utility
    @extend .col-lg-4; // Bootstrap column utility
    @extend .mb-4; // Bootstrap margin utility
  }
  
  .testimonial-card {
    @extend .bg-white; // Bootstrap background utility
    @extend .rounded; // Bootstrap border-radius utility
    @extend .p-4; // Bootstrap padding utility
    @extend .shadow-sm; // Bootstrap shadow utility
    @extend .h-100; // Bootstrap height utility
    @extend .border-start; // Bootstrap border utility
    @extend .border-4; // Bootstrap border-width utility
    @extend .border-primary; // Bootstrap border-color utility
    
    .testimonial-text {
      @extend .fst-italic; // Bootstrap font-style utility
      @extend .mb-3; // Bootstrap margin utility
      @extend .pb-3; // Bootstrap padding utility
      @extend .border-bottom; // Bootstrap border utility
    }
    
    .testimonial-author {
      @extend .text-end; // Bootstrap text alignment utility
    }
    
    .testimonial-name {
      @extend .fw-bold; // Bootstrap font-weight utility
      @extend .mb-0; // Bootstrap margin utility
    }
    
    .testimonial-company {
      @extend .text-muted; // Bootstrap text color utility
      @extend .small; // Bootstrap text size utility
    }
  }
  
  // Variants
  &.testimonial-section-alt {
    @extend .bg-white; // Bootstrap background utility
    
    .testimonial-card {
      @extend .bg-light; // Bootstrap background utility
    }
  }
}