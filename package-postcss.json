{
  "name": "genesis-theme-css-optimization",
  "version": "1.0.0",
  "description": "PostCSS optimization for Genesis theme CSS",
  "scripts": {
    "build:css": "sass --no-source-map --load-path=_sass assets/css/style.scss assets/css/compiled.css",
    "optimize:css": "postcss assets/css/compiled.css -o assets/css/style.min.css",
    "build:optimize": "npm run build:css && npm run optimize:css"
  },
  "devDependencies": {
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "cssnano": "^6.0.3",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "postcss-sort-media-queries": "^5.2.0"
  }
}
